.chessboard
  height: $dimension-size
  width:  $dimension-size
  margin-left  auto
  margin-right auto
  border: 3px solid #333
  font-size 0

  .square
    display: inline-block
    line-height $square-size

    &:nth-of-type(16n + 16),
    &:nth-of-type(16n + 14),
    &:nth-of-type(16n + 12),
    &:nth-of-type(16n + 10),
    &:nth-of-type(16n + 7),
    &:nth-of-type(16n + 5),
    &:nth-of-type(16n + 3),
    &:nth-of-type(16n + 1)
      inset-dark-background()

  for color in 'black' 'white'
    &.highlight-{color}-pieces
      .square.piece.{color}:hover
        border: 4px solid green

        &::before
          transform: translateY(-4px)

  &.highlight-destinations
    .square:not(.piece):hover
      border: 4px solid green
